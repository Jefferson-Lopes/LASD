module loading_dec (
		input [3:0] bin_in,
		output [6:0] display_out
	);
		
	always_comb begin
		case (bin_in)
			4'h0: display_out = 7'b0000001;
			4'h1: display_out = 7'b0000010;
			4'h2: display_out = 7'b0000100;
			4'h3: display_out = 7'b0001000;
			4'h4: display_out = 7'b0010000;
			4'h5: display_out = 7'b0100000;
			default: display_out = 7'b0000000;
		endcase
	end
	
endmodule
